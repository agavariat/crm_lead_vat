<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="opportunity_form_view">
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='lead']" position="attributes" > 
                 <attribute name='invisible'>1</attribute> 
            </xpath>
            <xpath expr="//page[@name='lead']" position="before">
                <page string="Organización y Administración">
                    <sheet>
                        <group string="Organización y Administración (15%)">
                            <h4>Organización</h4>
                            <field name="x_org1"/>
                            <field name="x_org2"/>
                        </group>
                        <group col="4">
                            <field name="x_org1"/>
                            <field name="x_org1"/>
                        </group>
                    </sheet>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
