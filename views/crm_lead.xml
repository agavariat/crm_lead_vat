<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="opportunity_form_view">
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='lead']" position="attributes" > 
                 <attribute name='invisible'>1</attribute> 
            </xpath>
            <xpath expr="//page[@name='lead']" position="before">
                <page string="Organización y Administración">
                    <sheet>
                        <group style = "line-height: 25px;" string="Organización y Administración (15%)">
                            <h4>Organización</h4>
                            <div class="oe_left oe_title">  
                            </div>
                            <div>
                                <label for="x_org1" style="width:110%%"/>
                                <label for="x_org2" style="width:110%%"/>
                            </div>
                            <div>
                                <field name="x_org1" style="width:30%%" class="oe_right oe_title_box_field"/>
                                <field name="x_org2" style="width:30%%" class="oe_right oe_title_box_field"/>
                                </div>
                                
                        </group>
                        <group>
                            <h4>Procesos Administrativos/Contables</h4>
                            <field name="x_org1"/>
                            <field name="x_org1"/>                            
                        </group>
                        <group string="Tecnologías a impulsar en procesos administrativos y contables en las MIPYME">
                            <h4>Organización</h4>
                            <field name="x_org1"/>
                            <field name="x_org1"/>
                        </group>
                        <group>
                            <h4>Procesos Administrativos/Contables</h4>
                            <field name="x_org1"/>
                            <field name="x_org1"/>
                        </group>
                    </sheet>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
