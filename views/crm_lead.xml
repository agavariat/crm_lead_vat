<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="opportunity_form_view">
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='lead']" position="attributes" > 
                 <attribute name='invisible'>1</attribute> 
            </xpath>
            <xpath expr="//page[@name='lead']" position="before">
                <page string="Organización y Administración">
                    <sheet>
                        <group style = "line-height: 25px;" string="Organización y Administración (15%)">
                            <h4>Organización</h4>                   
                        </group>
                        <group>
                            <field name="x_org1" style="width:80%%"/><br/>
                            <field name="x_org2" style="width:80%%"/><br/>
                            <field name="x_org3" style="width:80%%"/><br/>
                            <field name="x_org4" style="width:80%%"/><br/>
                            <field name="x_org5" style="width:80%%"/><br/>
                            <field name="x_org6" style="width:80%%"/><br/>
                            <field name="x_org6" style="width:80%%"/><br/>
                            <field name="x_org7" style="width:80%%"/><br/>
                        </group>
                        <group>
                            <h4>Procesos Administrativos/Contables </h4>                   
                        </group>
                        <group>
                            <field name="x_org8" style="width:80%%"/><br/>
                            <field name="x_org9" style="width:80%%"/><br/>
                            <field name="x_org10" style="width:80%%"/><br/>
                            <field name="x_org11" style="width:80%%"/><br/>
                            <field name="x_org12" style="width:80%%"/><br/>
                            <field name="x_org13" style="width:80%%"/><br/>
                            <field name="x_org14" style="width:80%%"/><br/>
                            <field name="x_org15" style="width:80%%"/><br/>
                            <field name="x_org16" style="width:80%%"/><br/>
                            <field name="x_org17" style="width:80%%"/><br/>
                            <field name="x_org18" style="width:80%%"/><br/>
                            <field name="x_org19" style="width:80%%"/><br/>
                            <field name="x_org20" style="width:80%%"/><br/>
                            <field name="x_org21" style="width:80%%"/>
                        </group>
                    </sheet>
                </page>
                <page string="Producción y Ambiente (15%)">
                    <sheet>
                        <group style = "line-height: 25px;" string="Organización y Administración (15%)">
                            <h4>Producción y Productividad</h4>                   
                        </group>
                        <group>
                            <field name="x_pa1" style="width:80%%"/><br/>
                            <field name="x_pa2" style="width:80%%"/><br/>
                            <field name="x_pa3" style="width:80%%"/><br/>
                            <field name="x_pa4" style="width:80%%"/><br/>
                            <field name="x_pa5" style="width:80%%"/><br/>
                            <field name="x_pa6" style="width:80%%"/><br/>
                            <field name="x_pa7" style="width:80%%"/><br/>
                            <field name="x_pa8" style="width:80%%"/><br/>
                            <field name="x_pa9" style="width:80%%"/><br/>
                            <field name="x_pa10" style="width:80%%"/><br/>
                            <field name="x_pa11" style="width:80%%"/><br/>
                            <field name="x_pa12" style="width:80%%"/><br/>
                        </group>
                        <group>
                            <h4>Ambiente</h4>                   
                        </group>
                        <group>
                            <field name="x_pa13" style="width:80%%"/><br/>
                            <field name="x_pa14" style="width:80%%"/><br/>
                            <field name="x_pa15" style="width:80%%"/><br/>
                            <field name="x_pa16" style="width:80%%"/><br/>
                            <field name="x_pa17" style="width:80%%"/><br/>
                            <field name="x_pa18" style="width:80%%"/><br/>
                        </group>
                    </sheet>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
